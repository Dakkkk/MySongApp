<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:foreground="@drawable/recycler_item_frame"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryLight"
        android:contentDescription="@string/thumbnail"
        android:src="@drawable/ic_music_video_black_48px" />

    <TextView
        android:id="@+id/song_title"
        tools:ignore="RtlSymmetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/song_image"
        android:maxLines="2"
        android:paddingStart="16dp"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/song_author"
        tools:ignore="RtlSymmetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_title"
        android:layout_toEndOf="@+id/song_image"
        android:paddingStart="14dp"
        android:text="@string/author"
        android:textColor="@color/secondaryText" />

    <TextView
        android:id="@+id/song_release_date"
        tools:ignore="RtlSymmetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_author"
        android:layout_toEndOf="@+id/song_image"
        android:paddingStart="14dp"
        android:textColor="@color/secondaryText" />

</RelativeLayout>

